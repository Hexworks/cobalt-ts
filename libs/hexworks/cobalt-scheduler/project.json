{
    "name": "hexworks-cobalt-scheduler",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/hexworks/cobalt-scheduler/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/libs/hexworks/cobalt-scheduler",
                "main": "libs/hexworks/cobalt-scheduler/src/index.ts",
                "tsConfig": "libs/hexworks/cobalt-scheduler/tsconfig.lib.json",
                "assets": ["libs/hexworks/cobalt-scheduler/*.md"],
                "babelUpwardRootMode": true
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs hexworks-cobalt-scheduler {args.ver} {args.tag}"
            },
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/hexworks/cobalt-scheduler/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/hexworks/cobalt-scheduler/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
