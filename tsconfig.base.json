{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "paths": {
            "@hexworks/cobalt-authorization": [
                "libs/hexworks/cobalt-authorization/src/index.ts"
            ],
            "@hexworks/cobalt-core": ["libs/hexworks/cobalt-core/src/index.ts"],
            "@hexworks/cobalt-events": [
                "libs/hexworks/cobalt-events/src/index.ts"
            ],
            "@hexworks/cobalt-graphql": [
                "libs/hexworks/cobalt-graphql/src/index.ts"
            ],
            "@hexworks/cobalt-http": ["libs/hexworks/cobalt-http/src/index.ts"],
            "@hexworks/cobalt-scheduler": [
                "libs/hexworks/cobalt-scheduler/src/index.ts"
            ],
            "@hexworks/cobalt-state": [
                "libs/hexworks/cobalt-state/src/index.ts"
            ]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
