#!/bin/bash

cd "$(dirname "$0")"

source includes/projects

print_usage() {
    echo "ðŸ’€ $1"
    echo "Help below ðŸ‘‡"
    echo ""
    echo "Publishes the given package. Will only work after performing a ./build-all."
    echo ""
    echo "Usage: ./publish <project>"
    ./projects
